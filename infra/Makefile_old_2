	@echo "  make help-workflows            - Ayuda para workflows automatizados"
	@echo "  make help-troubleshooting      - Ayuda para soluciÃ³n de problemas"
	@echo ""
	@echo "ğŸ” CATEGORÃAS PRINCIPALES:"
	@echo ""
	@grep -E '^[a-zA-Z_-]+:.*?## .*$' $(MAKEFILE_LIST) | \
		awk 'BEGIN {FS = ":.*?## "}; {printf "  %-25s %s\n", $$1, $$2}' | \
		grep -E "(ğŸ”½|ğŸ”|â™»ï¸|ğŸ”|ğŸ“Š|ğŸ§ª|ğŸš€|ğŸ”¨|âœ…|ğŸ› ï¸|ğŸ¯|ğŸ“Š|ğŸ”„|ğŸ†˜|ğŸ“±|ğŸ”|ğŸ“‹)" | \
		head -20
	@echo ""
	@echo "ğŸ’¡ Ejecuta 'make help-[categoria]' para ayuda especÃ­fica"

