.PHONY: clear-all
clear-all: podman-ready ## ğŸ§¨ Detiene y elimina TODOS los contenedores, volÃºmenes e imÃ¡genes no usadas.
	@echo "ğŸ§¨ Limpieza profunda de Podman: Down, Prune, Images."
	# 1. Elimina contenedores y volÃºmenes de Compose
	$(MAKE) down-all
	# 2. Limpia volÃºmenes huÃ©rfanos y cache de imÃ¡genes
	$(MAKE) clean-podman
	# 3. Elimina TODOS los contenedores que hayan quedado
	$(MAKE) podman-remove-all

## â™»ï¸ Mantenimiento y limpieza
clean-volumes: podman-ready ## ğŸ§¹ Limpia volÃºmenes no usados
	podman volume prune -f
down-%: podman-ready
	@echo "ğŸ§¹ Bajando perfil: $*"
	$(COMPOSE_LOCAL) --profile $* down -v --remove-orphans

clean-images: podman-ready ## ğŸ§¹ Limpia imÃ¡genes sin contenedor
	podman image prune -a -f

clean-podman: podman-ready ## ğŸ§¹ Limpia imÃ¡genes sin contenedor y volÃºmenes
	$(MAKE) clean-images
	$(MAKE) clean-volumes

stop-all: podman-ready ## ğŸ›‘ Detiene todos los contenedores activos en Podman
	@echo "ğŸ›‘ Deteniendo todos los contenedores..."
	podman ps -q | xargs -r podman stop
	podman system prune -f --volumes

reset-db: podman-ready ## ğŸ§¨ Reinicia product-db con script inicial
	@echo "â›” Eliminando contenedor y volumen de product-db..."
	$(COMPOSE_LOCAL) down -v --remove-orphans
	@echo "ğŸš€ Levantando product-db..."
	$(COMPOSE_LOCAL) up --build -d product-db
	@echo "ğŸ“‹ Mostrando logs..."
	podman logs -f product-db

down-all: podman-ready
	@echo "ğŸ§¹ Limpiando todo el stack (Todos los perfiles)..."
	$(COMPOSE_LOCAL) $(foreach p,$(PROFILES_ALL),--profile $(p)) down -v --remove-orphans

reset-local: ## ğŸ” Reinicia completamente el entorno local
	$(MAKE) down-local
	$(MAKE) clean-podman
	$(MAKE) up-local

reload-schema: podman-ready ## â™»ï¸ Ejecuta el script SQL en product-db
	podman cp ./init-scripts/product-init.sql product-db:/tmp/product-init.sql
	podman exec -it product-db psql -U product -d product -f /tmp/product-init.sql


## ğŸ” Logs y verificaciÃ³n
logs-local: podman-ready ## ğŸ“œ Logs de todos los servicios locales
	$(COMPOSE_LOCAL) logs -f

