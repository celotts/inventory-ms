	@echo "ğŸ” Validando archivos .env..."
	@for env_file in $(ENV_FILE_LOCAL) $(ENV_FILE_DEV) $(ENV_FILE_PROD); do \
		if [ -f $$env_file ]; then \
			echo "âœ… $$env_file existe"; \
		else \
			echo "âŒ $$env_file no existe"; \
		fi \
	done

