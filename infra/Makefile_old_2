	@echo "âš¡ COMANDOS RÃPIDOS:"
	@echo "  make quick-start               - Inicio rÃ¡pido para desarrollo"
	@echo "  make quick-test                - Test rÃ¡pido completo"
	@echo "  make quick-deploy              - Despliegue rÃ¡pido"
