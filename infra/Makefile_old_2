	$(COMPOSE_LOCAL) --profile supplier ps

up-ms: podman-ready fix-container-orphans ## ğŸš€ Infra + supplier + purchase (sin product)
	@echo "ğŸ§¹ Copiando variables de entorno..."
	cp $(ENV_FILE_LOCAL) .env.override
	@echo "ğŸ”¨ Construyendo JARs necesarios..."
	cd .. && ./gradlew :config-service:bootJar :discovery-service:bootJar :supplier-service:bootJar :purchase-service:bootJar
	@echo "ğŸ¦­ Levantando contenedores (infra, supplier, purchase)..."
	$(COMPOSE_LOCAL) --profile infra --profile supplier --profile purchase up -d --build

# --- TAX Service ---
up-tax: podman-ready fix-container-orphans ## ğŸš€ Levantar perfil tax (compose)
	@echo "ğŸ¦­ Levantando discovery, config, tax-db y tax-service..."
	$(COMPOSE_LOCAL) --profile infra --profile tax up -d --build discovery-service config-service tax-db tax-service

# Variante con TAX (no pisa up-local base)
up-local-with-tax: podman-ready fix-container-orphans ## ğŸ§ª Infra + product + gateway + tax
	@echo "ğŸ§¹ Copiando variables de entorno..."
	cp $(ENV_FILE_LOCAL) .env.override
	@echo "ğŸ”¨ Construyendo servicios base..."
	cd .. && ./gradlew :config-service:bootJar :discovery-service:bootJar :product-service:bootJar :api-gateway:bootJar
	@if [ -f "../tax-service/build.gradle" ] && grep -q 'include\("?tax-service"?\)' ../settings.gradle; then \
	  echo "ğŸ”¨ Construyendo tax-service..."; \
	  cd .. && ./gradlew :tax-service:bootJar; \
	else \
	  echo "â„¹ï¸ tax-service no presente; se omite build"; \
	fi
	@echo "ğŸ¦­ Levantando contenedores con Podman (perfiles: infra, product, gateway, tax)..."
	$(COMPOSE_LOCAL) --profile infra --profile product --profile gateway --profile tax up -d --build

up-purchase: podman-ready fix-container-orphans ## ğŸš€ Levantar perfil purchase (compose)
	@echo "ğŸ¦­ Levantando discovery, config, purchase-db y purchase-service..."
	$(COMPOSE_LOCAL) --profile infra --profile purchase up -d --build discovery-service config-service purchase-db purchase-service

up-local-product-supplier-tax: podman-ready fix-container-orphans ## ğŸ§ª Infra + product + supplier + tax
	@echo "ğŸ§¹ Copiando variables de entorno (supplier/local)..."
	@echo "â„¹ï¸  Archivo supplier detectado: $(ENV_FILE_LOCAL_SUPPLIER_RESOLVED)"
	cp "$(ENV_FILE_LOCAL_SUPPLIER_RESOLVED)" "$(CURDIR)/.env.override"

	@COMPOSE_FILE="$(CURDIR)/docker-compose-podman.yml"; \
	echo "ğŸ” Validando compose (perfiles: infra,product,supplier,tax)"; \
	COMPOSE_PROFILES=infra,product,supplier,tax \
	$(RUN) podman compose -f $$COMPOSE_FILE --env-file "$(ENV_FILE_LOCAL_SUPPLIER_RESOLVED)" \
	  config >/dev/null || { \
	    echo "âŒ 'podman compose config' fallÃ³. Mostrando salida completa para diagnÃ³stico:"; \
	    COMPOSE_PROFILES=infra,product,supplier,tax \
	    $(RUN) podman compose -f $$COMPOSE_FILE --env-file "$(ENV_FILE_LOCAL_SUPPLIER_RESOLVED)" config; \
	    exit 1; \
	  }; \
	OUT="$$(COMPOSE_PROFILES=infra,product,supplier,tax \
	  $(RUN) podman compose -f $$COMPOSE_FILE --env-file "$(ENV_FILE_LOCAL_SUPPLIER_RESOLVED)" \
	    config --services)"; \
	LINES="$$(printf "%s\n" "$$OUT" | tr ' ' '\n' | sed '/^$$/d')"; \
	echo "ğŸ“‹ Servicios detectados:"; printf "%s\n" "$$LINES"; \
	for s in discovery-service config-service product-db product-service supplier-db supplier-service tax-db tax-service; do \
	  echo "$$LINES" | grep -xq $$s || { echo "âŒ Falta $$s"; exit 1; }; \
	done; \
	echo "âœ… Todos los servicios requeridos estÃ¡n definidos."

	@echo "ğŸ”¨ Construyendo JARs necesarios..."
	cd "$(CURDIR)/.." && ./gradlew \
		:config-service:bootJar \
		:discovery-service:bootJar \
		:product-service:bootJar \
		:supplier-service:bootJar \
		:tax-service:bootJar

	@echo "ğŸ¦­ Levantando discovery, config, product, supplier y tax..."
	@COMPOSE_PROFILES=infra,product,supplier,tax \
	$(RUN) podman compose -f "$(CURDIR)/docker-compose-podman.yml" --env-file "$(ENV_FILE_LOCAL_SUPPLIER_RESOLVED)" \
	  --profile infra --profile product --profile supplier --profile tax \
	  up -d --build \
	  discovery-service config-service \
	  product-db product-service \
	  supplier-db supplier-service \
	  tax-db tax-service || { echo "âŒ 'podman compose up' fallÃ³"; exit 1; }

	@$(COMPOSE_LOCAL_SUPPLIER) ps

down-local-with-tax: podman-ready ## ğŸ”» Apaga infra local (perfiles: infra, product, gateway, tax)
	$(COMPOSE_LOCAL) --profile infra --profile product --profile gateway --profile tax down -v --remove-orphans

fix-container-orphans: ## âš ï¸ FUERZA la detenciÃ³n de proxies y conexiones atascadas de Podman
	@echo "âš ï¸ Intentando forzar la limpieza de proxies y procesos atascados de Podman..."
	# 1. Eliminar contenedores huÃ©rfanos/atascados
	podman rm -f $$(podman ps -aq) 2>/dev/null || true
	# 2. Intentar detener y reiniciar la VM de Podman (la forma mÃ¡s segura de limpiar el proxy)
	podman machine stop 2>/dev/null || true
	podman machine start 2>/dev/null || true
	# 3. Limpieza general de sistema, volÃºmenes, y sockets (aunque puede ser agresivo)
	podman system prune -f --volumes 2>/dev/null || true
	@echo "âœ… Intento de limpieza forzada completado. Vuelve a ejecutar tu 'make up-local...'."

rebuild-tax-local: podman-ready ## ğŸ” Rebuild tax-service (local)
	@echo "ğŸ› ï¸  Rebuild tax-service (local)"
	cp $(ENV_FILE_LOCAL) .env.override
	cd .. && ./gradlew :tax-service:bootJar
	$(COMPOSE_LOCAL) --profile infra --profile tax build tax-service
	$(COMPOSE_LOCAL) --profile infra --profile tax \
	  up -d discovery-service config-service tax-db tax-service

run-tax-local: ## ğŸš€ Ejecutar tax-service local (sin contenedor)
	@echo "ğŸš€ tax-service local en http://localhost:$(TAX_PORT)"
	cd ../tax-service && ./gradlew bootRun --args='--spring.profiles.active=local'

logs-tax: podman-ready ## ğŸ“œ Logs de tax-service
	$(COMPOSE_LOCAL) --profile tax logs -f tax-service

status-tax: podman-ready ## ğŸ“Š Estado de perfil tax
	$(COMPOSE_LOCAL) --profile tax ps

health-tax: ## ğŸ’š Health de tax-service
	@curl -fsS http://localhost:$(TAX_PORT)/actuator/health | jq . || echo "âŒ tax-service no responde"


