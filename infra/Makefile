## ğŸ†˜ Troubleshooting y diagnÃ³stico
troubleshoot-db: ## ğŸ†˜ DiagnÃ³stico de problemas de base de datos
	@echo "ğŸ†˜ Diagnosticando problemas de base de datos..."
	@echo "ğŸ” Estado del contenedor de BD:"
	podman ps -a --filter name=product-db
	@echo "\nğŸ“‹ Logs recientes de la BD:"
	podman logs --tail 20 product-db 2>/dev/null || echo "âŒ No se pueden obtener logs de product-db"
	@echo "\nğŸ’¾ Verificando volumen de datos:"
	podman volume inspect inventoryms_product-data >/dev/null 2>&1 && echo "âœ… Volumen existe" || echo "âŒ Volumen no existe"
	@echo "\nğŸŒ Verificando conectividad:"
	podman exec product-db pg_isready -U product 2>/dev/null && echo "âœ… PostgreSQL respondiendo" || echo "âŒ PostgreSQL no responde"

troubleshoot-network: ## ğŸ†˜ DiagnÃ³stico de problemas de red
	@echo "ğŸ†˜ Diagnosticando problemas de red..."
	@echo "ğŸŒ Redes disponibles:"
	podman network ls
	@echo "\nğŸ”Œ Conectividad entre contenedores:"
	@for service in discovery-service config-service api-gateway product-service; do \
		echo "ğŸ§ª Probando $service..."; \
		podman exec product-service ping -c 1 $service 2>/dev/null && echo "âœ… $service accesible" || echo "âŒ $service no accesible"; \
	done

troubleshoot-services: ## ğŸ†˜ DiagnÃ³stico de problemas de servicios
	@echo "ğŸ†˜ Diagnosticando problemas de servicios..."
	@echo "ğŸ“Š Estado de servicios:"
	$(MAKE) status
	@echo "\nğŸ§ª Health checks:"
	$(MAKE) test-services
	@echo "\nğŸ“‹ Logs de errores recientes:"
	podman-compose logs --tail 10 | grep -i error || echo "â„¹ï¸ No se encontraron errores recientes"

fix-common-issues: ## ğŸ”§ Solucionar problemas comunes
	@echo "ğŸ”§ Solucionando problemas comunes..."
	@echo "ğŸ§¹ Limpiando recursos no utilizados..."
	$(MAKE) clean-podman
	@echo "ğŸ”„ Reiniciando mÃ¡quina Podman..."
	podman machine stop 2>/dev/null || true
	podman machine start
	@echo "ğŸš€ Recreando contenedores..."
	$(MAKE) reset-local
	@echo "âœ… Problemas comunes solucionados"

