# Imagen de runtime (se mantiene JDK si lo necesitas para herramientas de desarrollo/debugging)
FROM eclipse-temurin:21-jdk-jammy

ARG DEBIAN_FRONTEND=noninteractive
SHELL ["/bin/bash", "-o", "pipefail", "-c"]
# Instala bash y curl en una sola capa limpia
RUN apt-get update \
 && apt-get install -y bash curl \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# ğŸ” Copia los scripts desde la ubicaciÃ³n central (infra/scripts)
# Â¡CORRECCIÃ“N APLICADA AQUÃ!
COPY ../infra/scripts/wait-for-it.sh ./
COPY ../infra/scripts/entrypoint.sh ./

# âœ… Asegura permisos de ejecuciÃ³n
RUN chmod +x wait-for-it.sh entrypoint.sh

# ğŸ“¦ Copia el .jar generado por Gradle (AsegÃºrate de que el nombre del JAR sea correcto)
COPY tax-service/build/libs/*.jar app.jar

EXPOSE 9092

ENTRYPOINT ["bash", "entrypoint.sh"]